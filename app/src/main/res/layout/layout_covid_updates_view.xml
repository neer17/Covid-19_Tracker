<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/state_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="State Name" />

    <TextView
        android:id="@+id/confirmed_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="@+id/state_name"
        app:layout_constraintStart_toEndOf="@+id/state_name"
        app:layout_constraintTop_toTopOf="@+id/state_name"
        tools:text="3000" />

    <TextView
        android:id="@+id/confirmed_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/confirmed_total"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmed_total"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_total"
        tools:text="100" />

    <TextView
        android:id="@+id/recovered_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toEndOf="@+id/confirmed_total"
        app:layout_constraintTop_toTopOf="@+id/confirmed_total"
        tools:text="3000" />

    <TextView
        android:id="@+id/recovered_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/recovered_total"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/recovered_total"
        app:layout_constraintTop_toBottomOf="@+id/recovered_total"
        tools:text="100" />

    <TextView
        android:id="@+id/deceased_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/recovered_total"
        app:layout_constraintTop_toTopOf="@+id/recovered_total"
        tools:text="3000" />

    <TextView
        android:id="@+id/deceased_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/deceased_total"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/deceased_total"
        app:layout_constraintTop_toBottomOf="@+id/deceased_total"
        tools:text="100" />
</androidx.constraintlayout.widget.ConstraintLayout>