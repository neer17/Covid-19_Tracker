<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_update"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mvi_scaffolding.ui.main.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_assessmentFragment"
            app:destination="@id/assessmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/assessmentFragment"
        android:name="com.example.mvi_scaffolding.ui.main.AssessmentFragment"
        android:label="AssessmentFragment" >
        <action
            android:id="@+id/action_assessmentFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>